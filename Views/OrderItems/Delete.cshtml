    <div>
        <h4>OrderItem</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ItemOrdered)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ItemOrdered.Description)
            </dd>
            <dt class="col-sm-2">
