@model RestaurantProject.Models.Buyer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <h1>Create</h1>

    <h4>Buyer</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
